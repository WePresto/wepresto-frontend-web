{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "plugins": ["react", "import", "jsx-a11y"],
  "rules": {
    "react/prop-types": 0,
    "linebreak-style": 1,
    "quotes": ["error", "double"],
    "no-console": ["error", { "allow": ["warn", "error", "time", "timeEnd"] }],
    "comma-dangle": ["error", "only-multiline"],
    "semi": ["error", "always"],
    "import/no-unresolved": 0
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
